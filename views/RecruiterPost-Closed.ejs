    $(".direct-list").on('keydown', function(e){
        if (e.key === 'Enter') {
        e.preventDefault(); // Mencegah newline karakter
        const text = $(this).val();
        if (text.trim() !== '') {
            $(this).val($(this).val()+'\n• ');
        }
    }
