<%- include('./layouts/header'); -%>
<nav class="navbar navbar-expand-lg px-5 py-4">
    <div class="container-fluid">
      <a class="navbar-brand d-flex align-items-center gap-3 fw-semibold" href="/"><img src="/img/logo.png" alt="" width="30"> Magang Portal</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 me-5">
          <li class="nav-item">
            <a class="nav-link fw-semibold" href="/">Jobseeker</a>
          </li>
          <li class="nav-item">
            <a class="nav-link fw-semibold" href="/employer">Employer</a>
          </li>
        </ul>
        <div class="d-flex gap-4" role="search">
          <a href="/login"><button class="btn btn-outline-primary" type="button">Masuk</button></a>
          <a href="/sign-up"><button class="btn btn-primary hiring" type="button">Daftar</button></a>
        </div>
      </div>
    </div>
  </nav>

  <main class="px-5 d-flex justify-content-center my-5">
    <form action="/api/users/login" method="post" class="login-form py-3 px-5" style="position: relative;">
        <p class="text-center fs-5 my-3 head">Masuk Magang.co.id</p>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Email</label>
            <input name="username" type="email" class="form-control" id="exampleFormControlInput1" placeholder="me@example.com">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput2" class="form-label">Password</label>
            <input name="password" type="password" class="form-control" id="exampleFormControlInput2" placeholder="************">
        </div>
        <div class="login-helper d-flex justify-content-between mt-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                  Ingat Saya
                </label>
            </div>
            <a href="">Lupa kata sandi?</a>
        </div>
        <button type="submit" class="btn btn-primary w-100 my-3">Masuk</button>
        <div class="container my-3">
            <div class="row">
              <div class="col">
                <div class="hr-text">
                  <span class="text-muted">or</span>
                </div>
              </div>
            </div>
        </div>
        <a href="/api/users/google">
          <button type="button" class="btn w-100 my-3 login-google d-flex">
              <img src="/img/google_logo.svg" alt="" width="25px">
              <div class="w-100">
                  <span class="text-center">MASUK DENGAN GOOGLE</span>
              </div>
          </button>
        </a>
        <p class="text-center" style="font-size: .85rem;">Belum mempunyai akun magang? <a href="/sign-up">Daftar</a></p>
    </form>
  </main>

<%- include('./layouts/footer'); -%>
<script src="/js/Login.js"></script>
